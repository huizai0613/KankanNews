<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="top_category_scroll_view_item_text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/share_borad_show</item>
        <item name="android:windowExitAnimation">@anim/share_borad_hide</item>
    </style>

    <style name="AppTheme_s" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/welcome_kankan</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MYTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/dove_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
    </style>

    <!-- 菜单布局 -->
    <style name="menu_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!-- 菜单 item左侧 -->
    <style name="menu_layout_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 菜单图标 -->
    <style name="menu_layout_left_icon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 菜单文字 -->
    <style name="menu_layout_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 菜单数字 -->
    <style name="menu_layout_left_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/menu_num</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 菜单item右侧 -->
    <style name="menu_layout_right">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/icon_menu_right</item>
    </style>

    <!-- 菜单分割线 -->
    <style name="menu_item_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#8a857f</item>
    </style>

    <!-- 设置布局 -->
    <style name="set_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <!-- 设置布局 -->
    <style name="set_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 设置左侧布局 -->
    <style name="set_layout_left_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 设置右侧布局  图片 -->
    <style name="set_layout_right_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- 设置右侧布局  文字 -->
    <style name="set_layout_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#adadad</item>
    </style>

    <!-- 设置分割线 -->
    <style name="set_item_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#bbbbbb</item>
    </style>

    <!-- 设置分割线1 -->
    <style name="set_item_Line_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <!-- 设置分割线2 -->
    <style name="set_item_Line_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!-- 设置分割线3 -->
    <style name="set_item_Line_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#a8a8a8</item>
    </style>

    <!-- 设置分割线4 -->
    <style name="set_item_Line_4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#dfdfdf</item>
    </style>

    <!-- 内容界面分享布局  字体 -->
    <style name="content_share_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- 内容界面分享布局  图标 -->
    <style name="content_share_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- 内容界面底部菜单布局 -->
    <style name="content_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 内容界面底部菜单布局 图标 -->
    <style name="content_bar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- 内容界面底部菜单布局 文字 -->
    <style name="content_bar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <!-- 正在加载dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 这儿也很重要啊，我这儿用了一张透明的.9.png的图，当然用#00000000也是可以的，否则的话这儿出来后有一个黑色的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 自定义下载视频进度条 -->
    <style name="mProgress_horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <!-- 自定义dialog样式 -->
    <style name="MyDialog1" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- checkBox 样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!-- 暂无收藏/评论/离线  图片样式 -->
    <style name="no_img_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>

    <!-- 暂无收藏/评论/离线  字体样式 -->
    <style name="no_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#acacac</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textSize">@dimen/calendar_text_small</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 设置分割线 -->
    <style name="new_set_item_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f6f6f6</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/pic_selected_slide_in</item>
        <item name="android:windowExitAnimation">@anim/pic_selected_slide_out</item>
    </style>

</resources>