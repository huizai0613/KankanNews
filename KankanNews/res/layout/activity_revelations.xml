<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        layout="@layout/base_title_bar"
        android:background="@color/deeper_gray" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/base_action_bar_height"
        android:layout_marginTop="@dimen/base_action_bar_height"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/scroll_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:text="您的报料或提供的有价值线索，将会由上海电视台的记者尽快处理。请描述清楚您的事件，有图为佳。"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:text="报料内容(必填)"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/revelations_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/revelations_post_content_edittext_shape"
                    android:gravity="left|top"
                    android:hint="请输入报料内容，300字内"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:minLines="5"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/revelations_post_content_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/revelations_post_content"
                    android:layout_alignRight="@+id/revelations_post_content"
                    android:padding="5dp"
                    android:text="0/300字"
                    android:textColor="#D6D6D6"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:text="照片(选填、最多上传9张)"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/revelations_post_content_edittext_shape"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/revelations_image_one"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/revelations_add_pic"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/revelations_image_two"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/revelations_add_pic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/revelations_image_three"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/revelations_add_pic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/revelations_image_four"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/revelations_add_pic"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:text="联系电话(必填)"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/revelations_post_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/revelations_post_content_edittext_shape"
                android:gravity="left|top"
                android:hint="手机或固定电话，让我们找到您"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="10dp"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true" >

        <com.kankan.kankanews.ui.view.MyTextView
            android:id="@+id/revelations_post_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dip"
            android:background="@drawable/revelations_post_button_shape"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20dip" />
    </LinearLayout>

</RelativeLayout>