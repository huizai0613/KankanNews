<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/comment_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_border_2"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.kankan.kankanews.ui.view.RoundImageView
                android:id="@+id/comment_userpic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_news_report_pic" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.kankan.kankanews.ui.view.MyTextView
                    android:id="@+id/comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="某某某"
                    android:textSize="16dp" />

                <com.kankan.kankanews.ui.view.MyTextView
                    android:id="@+id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="上海广播电视台电视中心记者"
                    android:textColor="@color/mid_gray"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <View  style="@style/set_item_Line_4"/>
        
        <com.kankan.kankanews.ui.view.MyTextView 
            android:id="@+id/comment_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textSize="14dp" 
             android:text="评论评论内容评论评论内容评论评论内容评论评论内容评论评论内容评论评论内容"
             android:layout_marginTop="10dp"
            />
    </LinearLayout>

</LinearLayout>