<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_item_bg_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/news_bask_space" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/news_bask_space"
        android:paddingRight="@dimen/news_bask_space" >

        <com.kankan.kankanews.ui.view.MyTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4.5dp"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_news_newstype"
            android:layout_width="25dp"
            android:layout_height="15dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/new_icon_sign_subject"
            android:visibility="gone" />

        <!--
            android:paddingRight="32dp"
        <ImageView
            android:id="@+id/home_news_newstype"
            android:layout_width="25dp"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/new_icon_sign_subject" />
        -->
    </RelativeLayout>

    <ImageView
        android:id="@+id/home_news_titlepic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/news_bask_space"
        android:paddingRight="@dimen/news_bask_space"
        android:scaleType="fitXY"
        android:src="@drawable/default_news_display" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/news_bask_space"
        android:background="@color/light_gray" />

</LinearLayout>