<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_no_alpha" >

    <include
        android:layout_alignParentTop="true"
        layout="@layout/base_title_bar" />

    <LinearLayout
        android:id="@+id/play_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_action_bar_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/video_package_video_root_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ff000000" >

            <tv.danmaku.ijk.media.widget.VideoView
                android:id="@+id/video_package_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:visibility="visible" />

            <com.kankan.kankanews.ui.view.VideoViewController
                android:id="@+id/video_package_video_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:visibility="visible" >
            </com.kankan.kankanews.ui.view.VideoViewController>

            <ImageView
                android:id="@+id/video_package_video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/live_video_image"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/video_package_video_start"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_centerInParent="true"
                android:padding="10dip"
                android:src="@drawable/ic_liveplay"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/video_pb"
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:background="@drawable/load_back_bg"
                android:paddingBottom="15dip"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="15dip"
                android:visibility="gone" >

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/iamge_progress"
                    android:indeterminateOnly="true"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/small_video_pb"
                    android:layout_width="80dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/load_back_bg"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:visibility="gone" >

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/iamge_progress"
                        android:indeterminateOnly="true"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.iss.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/video_package_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/play_root_view"
        android:divider="@null"
        android:listSelector="#ffffff"
        android:scrollbars="none" >
    </com.iss.view.pulltorefresh.PullToRefreshListView>

    <TextView
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/mid_gray"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retry" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/screnn_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:visibility="visible" >

        <ProgressBar
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/iamge_progress"
            android:indeterminateOnly="true"
            android:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/operation_volume_brightness"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:orientation="horizontal"
        android:padding="0dip"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/operation_bg"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_gravity="center"
            android:src="@drawable/video_volumn_bg" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="25dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <ImageView
                android:id="@+id/operation_full"
                android:layout_width="110dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/video_num_bg" />

            <ImageView
                android:id="@+id/operation_percent"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/video_num_front" />
        </FrameLayout>
    </FrameLayout>

    <View
        android:id="@+id/night_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/night_mask"
        android:visibility="gone" />

</RelativeLayout>